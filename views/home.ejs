<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Inicio | Inventario & Mantenimientos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    :root {
      --primary: #0d6efd;
      --success: #198754;
      --info: #0dcaf0;
      --warning: #ffc107;
      --danger: #dc3545;
      --secondary: #6c757d;
      --light-bg: #f5f7fa;
      --light-card: #ffffff;
      --light-text: #212529;
      --light-muted: #6c757d;
    }

    html[data-theme="dark"] {
      --light-bg: #1a1a2e;
      --light-card: #16213e;
      --light-text: #e0e0e0;
      --light-muted: #b0b0b0;
    }

    body {
      background: linear-gradient(135deg, var(--light-bg) 0%, #c3cfe2 100%);
      min-height: 100vh;
      color: var(--light-text);
    }

    html[data-theme="dark"] body {
      background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
    }

    .navbar {
      background: linear-gradient(90deg, var(--light-card) 0%, rgba(255,255,255,0.95) 100%) !important;
      box-shadow: 0 2px 20px rgba(0,0,0,0.08);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.2);
    }

    html[data-theme="dark"] .navbar {
      background: linear-gradient(90deg, rgba(22,33,62,0.95) 0%, rgba(15,52,96,0.95) 100%) !important;
      border: 1px solid rgba(255,255,255,0.1);
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.3rem;
      color: #0d6efd !important;
      background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    main {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .page-title {
      font-weight: 700;
      background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 2rem;
    }

    /* ====== GRADIENTES POR TIPO DE TARJETA ====== */
    .card {
      border: none !important;
      border-radius: 16px;
      transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
      overflow: hidden;
      position: relative;
      box-shadow: 0 8px 32px rgba(0,0,0,0.08);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.3);
      min-height: 380px;
    }

    /* CARD SUCCESS - Verde a Cian */
    .card.card-success {
      background: linear-gradient(135deg, rgba(25, 135, 84, 0.15) 0%, rgba(32, 201, 151, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-success {
      background: linear-gradient(135deg, rgba(25, 135, 84, 0.25) 0%, rgba(32, 201, 151, 0.15) 100%) !important;
    }

    /* CARD INFO - Cian a Azul */
    .card.card-info {
      background: linear-gradient(135deg, rgba(13, 202, 240, 0.15) 0%, rgba(13, 110, 253, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-info {
      background: linear-gradient(135deg, rgba(13, 202, 240, 0.25) 0%, rgba(13, 110, 253, 0.15) 100%) !important;
    }

    /* CARD WARNING - Amarillo a Naranja */
    .card.card-warning {
      background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 152, 0, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-warning {
      background: linear-gradient(135deg, rgba(255, 193, 7, 0.25) 0%, rgba(255, 152, 0, 0.15) 100%) !important;
    }

    /* CARD PRIMARY - Azul a Púrpura */
    .card.card-primary {
      background: linear-gradient(135deg, rgba(13, 110, 253, 0.15) 0%, rgba(108, 99, 255, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-primary {
      background: linear-gradient(135deg, rgba(13, 110, 253, 0.25) 0%, rgba(108, 99, 255, 0.15) 100%) !important;
    }

    /* CARD SECONDARY - Gris oscuro a Gris */
    .card.card-secondary {
      background: linear-gradient(135deg, rgba(108, 117, 125, 0.15) 0%, rgba(73, 80, 87, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-secondary {
      background: linear-gradient(135deg, rgba(108, 117, 125, 0.25) 0%, rgba(73, 80, 87, 0.15) 100%) !important;
    }

    /* CARD DANGER - Rojo a Rosa */
    .card.card-danger {
      background: linear-gradient(135deg, rgba(220, 53, 69, 0.15) 0%, rgba(231, 76, 60, 0.1) 100%) !important;
    }

    html[data-theme="dark"] .card.card-danger {
      background: linear-gradient(135deg, rgba(220, 53, 69, 0.25) 0%, rgba(231, 76, 60, 0.15) 100%) !important;
    }

    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, var(--card-color), rgba(255,255,255,0.3));
    }

    .card-success { --card-color: #198754; }
    .card-info { --card-color: #0dcaf0; }
    .card-warning { --card-color: #ffc107; }
    .card-primary { --card-color: #0d6efd; }
    .card-secondary { --card-color: #6c757d; }
    .card-danger { --card-color: #dc3545; }

    .card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow: 0 20px 50px rgba(0,0,0,0.2);
    }

    html[data-theme="dark"] .card:hover {
      box-shadow: 0 20px 50px rgba(0,0,0,0.4);
    }

    .card-body {
      padding: 1.8rem;
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .card-body > p {
      flex-grow: 1;
      margin-bottom: 1rem;
    }

    .icon-circle {
      width: 55px;
      height: 55px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.6rem;
      margin-right: 1rem;
      box-shadow: 0 8px 16px rgba(0,0,0,0.15);
      backdrop-filter: blur(10px);
      flex-shrink: 0;
    }

    .icon-circle.success { background: linear-gradient(135deg, #198754 0%, #20c997 100%); color: white; }
    .icon-circle.info { background: linear-gradient(135deg, #0dcaf0 0%, #0d6efd 100%); color: white; }
    .icon-circle.warning { background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%); color: white; }
    .icon-circle.primary { background: linear-gradient(135deg, #0d6efd 0%, #6c63ff 100%); color: white; }
    .icon-circle.secondary { background: linear-gradient(135deg, #6c757d 0%, #495057 100%); color: white; }
    .icon-circle.danger { background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%); color: white; }

    .card-title {
      font-weight: 600;
      font-size: 1.15rem;
      margin: 0;
      color: var(--light-text);
    }

    .card-text {
      font-size: 0.95rem;
      color: var(--light-muted);
      line-height: 1.6;
    }

    .btn {
      font-weight: 600;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      transition: all 0.3s cubic-bezier(0.23, 1, 0.320, 1);
      border: none;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.2);
    }

    .btn-success {
      background: linear-gradient(135deg, #198754 0%, #20c997 100%);
      color: white;
    }

    .btn-success:hover {
      background: linear-gradient(135deg, #157347 0%, #1aa179 100%);
      color: white;
    }

    .btn-info {
      background: linear-gradient(135deg, #0dcaf0 0%, #0d6efd 100%);
      color: white;
    }

    .btn-info:hover {
      background: linear-gradient(135deg, #0b5ed7 0%, #0b58ca 100%);
      color: white;
    }

    .btn-warning {
      background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
      color: white;
    }

    .btn-warning:hover {
      background: linear-gradient(135deg, #ffb300 0%, #f57c00 100%);
      color: white;
    }

    .btn-primary {
      background: linear-gradient(135deg, #0d6efd 0%, #6c63ff 100%);
      color: white;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #0b5ed7 0%, #5a52d5 100%);
      color: white;
    }

    .btn-secondary {
      background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
      color: white;
    }

    .btn-secondary:hover {
      background: linear-gradient(135deg, #5c636a 0%, #3d444d 100%);
      color: white;
    }

    .btn-danger {
      background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
      color: white;
    }

    .btn-danger:hover {
      background: linear-gradient(135deg, #c82333 0%, #c0392b 100%);
      color: white;
    }

    .btn-theme {
      background: rgba(13, 110, 253, 0.2);
      color: #0d6efd;
      border: 2px solid #0d6efd;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      padding: 0 !important;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .btn-theme:hover {
      background: #0d6efd;
      color: white;
      transform: scale(1.1);
    }

    html[data-theme="dark"] .btn-theme {
      background: rgba(255, 255, 255, 0.1);
      color: #0dcaf0;
      border-color: #0dcaf0;
    }

    html[data-theme="dark"] .btn-theme:hover {
      background: #0dcaf0;
      color: #16213e;
    }

    .container {
      max-width: 1200px;
    }

    footer {
      background: linear-gradient(90deg, var(--light-card) 0%, rgba(255,255,255,0.95) 100%) !important;
      border-top: 1px solid rgba(0,0,0,0.05);
      box-shadow: 0 -2px 20px rgba(0,0,0,0.05);
      backdrop-filter: blur(10px);
    }

    html[data-theme="dark"] footer {
      background: linear-gradient(90deg, rgba(22,33,62,0.95) 0%, rgba(15,52,96,0.95) 100%) !important;
      border-top: 1px solid rgba(255,255,255,0.1);
    }

    .row.g-4 {
      row-gap: 2rem !important;
    }

    /* Animación suave de carga */
    .card {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
    }

    .card:nth-child(1) { animation-delay: 0.1s; }
    .card:nth-child(2) { animation-delay: 0.2s; }
    .card:nth-child(3) { animation-delay: 0.3s; }
    .card:nth-child(4) { animation-delay: 0.4s; }
    .card:nth-child(5) { animation-delay: 0.5s; }
    .card:nth-child(6) { animation-delay: 0.6s; }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .nav-link {
      color: var(--light-text) !important;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #0d6efd !important;
      transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .icon-circle {
        width: 48px;
        height: 48px;
        font-size: 1.3rem;
      }

      .card-title {
        font-size: 1rem;
      }

      .card-text {
        font-size: 0.9rem;
      }

      .btn {
        padding: 0.65rem 1.2rem;
        font-size: 0.8rem;
      }

      .page-title {
        font-size: 1.8rem;
      }

      .card {
        min-height: 350px;
      }
    }
  </style>
</head>
