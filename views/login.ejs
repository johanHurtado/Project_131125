<!-- Login redise침ado seg칰n estilo de las im치genes (tema claro/oscuro, tarjetas modernas, degradados) -->
<!-- Se mantiene toda la l칩gica backend EJS sin cambiar rutas ni nombres -->

<!doctype html>
<html lang="es" data-theme="light">
<head>
  <meta charset="utf-8" />
  <title>Login | Inventario & Mantenimientos HSRT</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --bg-light: linear-gradient(180deg, #e8f1ff, #d5e7ff);
      --bg-dark: linear-gradient(180deg, #002655, #001830);

      --card-light: rgba(255, 255, 255, 0.7);
      --card-dark: rgba(0, 20, 40, 0.55);

      --text-light: #0a1a2a;
      --text-dark: #e9f3ff;

      --icon-bg-light: #e4f3ff;
      --icon-bg-dark: #003466;
    }

    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg-light);
      transition: 0.4s ease-in-out;
    }

    [data-theme="dark"] body {
      background: var(--bg-dark);
    }

    .login-card {
      width: 100%;
      max-width: 380px;
      padding: 25px;
      border-radius: 18px;
      backdrop-filter: blur(12px);
      background: var(--card-light);
      box-shadow: 0px 8px 30px rgba(0,0,0,0.15);
      transition: 0.3s;
    }

    [data-theme="dark"] .login-card {
      background: var(--card-dark);
      box-shadow: 0px 8px 20px rgba(0,0,0,0.5);
    }

    .icon-circle {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 15px;
      background: var(--icon-bg-light);
      transition: 0.3s;
    }

    [data-theme="dark"] .icon-circle {
      background: var(--icon-bg-dark);
    }

    h1, label, p {
      color: var(--text-light);
      transition: 0.3s;
    }

    [data-theme="dark"] h1,
    [data-theme="dark"] label,
    [data-theme="dark"] p {
      color: var(--text-dark);
    }

    .theme-btn {
      position: absolute;
      top: 20px;
      right: 20px;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      border: none;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      background: #ffffffcc;
      backdrop-filter: blur(4px);
      transition: 0.3s;
    }

    [data-theme="dark"] .theme-btn {
      background: #001830cc;
      color: #fff;
    }

    .btn-primary {
      background: linear-gradient(90deg, #0077ff, #00b7ff);
      border: none;
      font-weight: bold;
    }
  </style>
</head>

<body>

  <!-- BOT칍N MODO OSCURO -->
  <button class="theme-btn" id="toggleTheme">游깿</button>

  <div class="login-card">

    <div class="icon-circle">
      <img src="/img/logosanrafa.png" style="width:42px; opacity:0.9;" />
    </div>

    <h1 class="text-center mb-3 fw-bold">Ingreso al Sistema</h1>
    <p class="text-center mb-4">Inventario & Mantenimientos HSRT</p>

    <% if (error) { %>
    <div class="alert alert-danger py-2"><%= error %></div>
    <% } %>

    <% if (success) { %>
    <div class="alert alert-success py-2"><%= success %></div>
    <% } %>

    <form method="post" action="/login" id="loginForm">

      <label class="fw-semibold">Usuario</label>
      <div class="input-group mb-3">
        <span class="input-group-text">游녻</span>
        <input name="username" class="form-control" required autofocus>
      </div>

      <label class="fw-semibold">Contrase침a</label>
      <div class="input-group mb-3">
        <span class="input-group-text">游</span>
        <input type="password" name="password" class="form-control" required>
      </div>

      <button class="btn btn-primary w-100" id="btnLogin">Ingresar</button>

      <p class="text-center mt-2">
        <a href="/forgot-password" class="small">쯆lvid칩 su contrase침a?</a>
      </p>

    </form>
  </div>

  <script>
    const root = document.documentElement;
    const toggle = document.getElementById("toggleTheme");

    toggle.addEventListener("click", () => {
      const current = root.getAttribute("data-theme");
      root.setAttribute("data-theme", current === "light" ? "dark" : "light");
    });

    const btn = document.getElementById('btnLogin');
    const form = document.getElementById('loginForm');

    form.addEventListener('submit', () => {
      btn.disabled = true;
      btn.textContent = "Ingresando...";
    });
  </script>

</body>
</html>
